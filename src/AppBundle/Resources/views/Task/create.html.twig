{% extends '::base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block pageTitle %}Create Task{% endblock %}

{% block body %}

    <div class="row">

        <form role="form" action="{{ path('task_create') }}" method="post" {{ form_enctype(form) }}>

            <div class="col-md-7">
                <div class="box">
                    <div class="box-body">
                        {{ form_row(form.title) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.reference) }}
                        {{ form_row(form.imageUrls) }}
                        {{ form_rest(form) }}
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="col-md-12">
                <input class="btn btn-primary" type="submit" value=" Create Task" />
            </div>

        </form>

    </div>

{% endblock %}