<div class="row" style="padding: 15px 15px 0;">

    <div class="col-lg-12">

        {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success alert-dismissable" style="margin-bottom: 0;">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
            <strong>Success!</strong> {{ flashMessage|raw }}
        </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-error alert-dismissable" style="margin-bottom: 0;">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
            <strong>Error!</strong> {{ flashMessage|raw }}
        </div>
        {% endfor %}

    </div>

</div>