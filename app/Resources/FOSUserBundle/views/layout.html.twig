    <script type="application/javascript">
        $(document).ready(function () {
            var container = $('form > div[id^="fos_user_"]');
            $(container).find(' > div').addClass('form-group');
            $(container).find(' > div input').addClass('form-control input-large');
            $(container).next().find('input[type="submit"]').addClass('btn btn-default');
        });
    </script>

